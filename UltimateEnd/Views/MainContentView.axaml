<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:UltimateEnd.ViewModels"
             xmlns:views="using:UltimateEnd.Views"
			 xmlns:converters="using:UltimateEnd.Converters"
             xmlns:overlays="using:UltimateEnd.Views.Overlays"
			 xmlns:behaviors="using:UltimateEnd.Behaviors"
             xmlns:selectors="using:UltimateEnd.DataTemplateSelectors"
             x:Class="UltimateEnd.Views.MainContentView"
             x:DataType="vm:MainViewModel"
			 Background="{DynamicResource Background.Primary}">
	<Grid>
		<ContentControl x:Name="MainContentHost" Content="{Binding CurrentView}">
			<ContentControl.DataTemplates>
				<DataTemplate DataType="vm:PlatformListViewModel">
					<views:PlatformListView/>
				</DataTemplate>
				<DataTemplate DataType="vm:GameListViewModel">
					<ContentControl Content="{Binding ViewMode, Converter={x:Static converters:ViewModeToControlConverter.Instance}}"/>
				</DataTemplate>
				<DataTemplate DataType="vm:SettingsViewModel">
					<views:SettingsView/>
				</DataTemplate>
				<DataTemplate DataType="vm:RomSettingViewModel">
					<views:RomSettingView/>
				</DataTemplate>
				<DataTemplate DataType="vm:ScreensaverViewModel">
					<views:ScreensaverView/>
				</DataTemplate>
			</ContentControl.DataTemplates>
		</ContentControl>

		<overlays:MessageOverlay x:Name="MessageOverlay" ZIndex="10000"/>
		<overlays:LoadingOverlay x:Name="LoadingOverlay" ZIndex="9999"/>
		<overlays:BatchScrapOverlay x:Name="BatchScrapOverlay" ZIndex="9998"/>
	</Grid>
</UserControl>