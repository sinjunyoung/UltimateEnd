<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- ============================================ -->
	<!-- Windows 11 스타일 라이트 테마 색상 정의 -->
	<!-- ============================================ -->

	<!-- 배경 색상 -->
	<SolidColorBrush x:Key="Background.Primary">#F3F3F3</SolidColorBrush>
	<SolidColorBrush x:Key="Background.Secondary">#FFFFFF</SolidColorBrush>
	<SolidColorBrush x:Key="Background.Tertiary">#FAFAFA</SolidColorBrush>
	<SolidColorBrush x:Key="Background.Card">#FFFFFF</SolidColorBrush>
	<SolidColorBrush x:Key="Background.Input">#FFFFFF</SolidColorBrush>
	<SolidColorBrush x:Key="Background.Hover">#C0C8D0</SolidColorBrush>
	<SolidColorBrush x:Key="Background.Border">#E0E0E0</SolidColorBrush>

	<!-- 텍스트 색상 -->
	<SolidColorBrush x:Key="Text.Primary">#000000</SolidColorBrush>
	<SolidColorBrush x:Key="Text.Secondary">#1C1C1C</SolidColorBrush>
	<SolidColorBrush x:Key="Text.Tertiary">#5F5F5F</SolidColorBrush>
	<SolidColorBrush x:Key="Text.Disabled">#A6A6A6</SolidColorBrush>
	<SolidColorBrush x:Key="Text.Muted">#8A8A8A</SolidColorBrush>

	<!-- 액센트 색상 (Windows 11 기본 블루) -->
	<SolidColorBrush x:Key="Accent.Blue">#0078D4</SolidColorBrush>
	<SolidColorBrush x:Key="Accent.Red">#D13438</SolidColorBrush>
	<SolidColorBrush x:Key="Accent.Green">#107C10</SolidColorBrush>
	<SolidColorBrush x:Key="Accent.Yellow">#FFB900</SolidColorBrush>

	<!-- 반투명 액센트 -->
	<SolidColorBrush x:Key="Accent.Blue.Transparent">#400078D4</SolidColorBrush>
	<SolidColorBrush x:Key="Accent.Red.Transparent">#40D13438</SolidColorBrush>

	<!-- 메인 프라이머리 그라디언트 (밝은 블루 → 진한 블루) -->
	<LinearGradientBrush x:Key="Gradient.Primary" StartPoint="0%,0%" EndPoint="100%,100%">
		<GradientStop Color="#4DA3FF" Offset="0"/>
		<GradientStop Color="#0078D4" Offset="0.5"/>
		<GradientStop Color="#005A9E" Offset="1"/>
	</LinearGradientBrush>

	<!-- 배경 그라디언트 (밝고 부드러운 화이트 톤) -->
	<LinearGradientBrush x:Key="Gradient.Background" StartPoint="0,0" EndPoint="1,1">
		<GradientStop Color="#FFFFFF" Offset="0.0"/>
		<GradientStop Color="#FAFAFA" Offset="0.25"/>
		<GradientStop Color="#F5F5F5" Offset="0.5"/>
		<GradientStop Color="#F3F3F3" Offset="0.75"/>
		<GradientStop Color="#FFFFFF" Offset="1.0"/>
	</LinearGradientBrush>

	<!-- 블루 글로우 (부드러운 블루 확산) -->
	<RadialGradientBrush x:Key="Gradient.Glow.Blue">
		<GradientStop Color="#4DA3FF" Offset="0"/>
		<GradientStop Color="#0078D4" Offset="0.4"/>
		<GradientStop Color="#CCE5FF" Offset="0.7"/>
		<GradientStop Color="Transparent" Offset="1"/>
	</RadialGradientBrush>

	<!-- 레드 글로우 (부드러운 레드 확산) -->
	<RadialGradientBrush x:Key="Gradient.Glow.Red">
		<GradientStop Color="#E74856" Offset="0"/>
		<GradientStop Color="#D13438" Offset="0.4"/>
		<GradientStop Color="#FFCCCC" Offset="0.7"/>
		<GradientStop Color="Transparent" Offset="1"/>
	</RadialGradientBrush>

	<!-- 컴포넌트별 색상 -->
	<!-- TextBox -->
	<SolidColorBrush x:Key="TextBox.Background">#FFFFFF</SolidColorBrush>
	<SolidColorBrush x:Key="TextBox.Foreground">#000000</SolidColorBrush>
	<SolidColorBrush x:Key="TextBox.BorderBrush">#8A8A8A</SolidColorBrush>
	<SolidColorBrush x:Key="TextBox.CaretBrush">#000000</SolidColorBrush>
	<SolidColorBrush x:Key="TextBox.SelectionBrush">#0078D4</SolidColorBrush>
	<SolidColorBrush x:Key="TextBox.SelectionForegroundBrush">#FFFFFF</SolidColorBrush>

	<!-- Description -->
	<SolidColorBrush x:Key="Description.Foreground">#5F5F5F</SolidColorBrush>
	<SolidColorBrush x:Key="Description.PlaceholderForeground">#A6A6A6</SolidColorBrush>

	<!-- Button -->
	<SolidColorBrush x:Key="Button.Primary.Background">#0078D4</SolidColorBrush>
	<SolidColorBrush x:Key="Button.Danger.Background">#D13438</SolidColorBrush>
	<SolidColorBrush x:Key="Button.Foreground">#FFFFFF</SolidColorBrush>
	<SolidColorBrush x:Key="Button.Hover.Foreground">#000000</SolidColorBrush>
	<SolidColorBrush x:Key="Button.Hover.Background">#F6F6F6</SolidColorBrush>

	<!-- ComboBox -->
	<SolidColorBrush x:Key="ComboBox.Background">#FFFFFF</SolidColorBrush>
	<SolidColorBrush x:Key="ComboBox.Foreground">#000000</SolidColorBrush>
	<SolidColorBrush x:Key="ComboBox.Border">#8A8A8A</SolidColorBrush>
	<SolidColorBrush x:Key="ComboBox.Item.Background">#FFFFFF</SolidColorBrush>
	<SolidColorBrush x:Key="ComboBox.Item.Hover">#F6F6F6</SolidColorBrush>

	<!-- CheckBox -->
	<SolidColorBrush x:Key="CheckBox.Foreground">#000000</SolidColorBrush>
	<SolidColorBrush x:Key="CheckBox.Box.BorderBrush">#000000</SolidColorBrush>

	<!-- Shadow/Effect 색상 -->
	<Color x:Key="Shadow.Color">#40000000</Color>
	<Color x:Key="Logo.Shadow.Color">#000000</Color>
	<Color x:Key="Glow.Blue">#0078D4</Color>
	<Color x:Key="Glow.Red">#D13438</Color>

	<!-- Focus 색상 -->
	<SolidColorBrush x:Key="Focus.BorderBrush">#000000</SolidColorBrush>
	<Thickness x:Key="Focus.BorderThickness">2</Thickness>

	<SolidColorBrush x:Key="Selection.BorderBrush">#000000</SolidColorBrush>

	<!-- x토글바 색상 -->
	<SolidColorBrush x:Key="Toggle.Background">#CCCCCC</SolidColorBrush>
	<SolidColorBrush x:Key="Toggle.SelectionBackground">#4CAF50</SolidColorBrush>

</ResourceDictionary>