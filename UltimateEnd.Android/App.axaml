		<Thickness x:Key="Padding.Description">10</Thickness>
		<Thickness x:Key="Padding.SettingsButton">6,3</Thickness>
		<Thickness x:Key="Padding.Search">6,5</Thickness>
		<Thickness x:Key="Padding.Border">5</Thickness>
		<Thickness x:Key="Padding.Tag">5,2</Thickness>
		<Thickness x:Key="Padding.TagSmall">4,1</Thickness>
		<Thickness x:Key="Padding.ListItem">2</Thickness>
		<Thickness x:Key="Padding.LogoImage">4</Thickness>
		<Thickness x:Key="Padding.LogoText">2</Thickness>
		<Thickness x:Key="Padding.SearchIcon">0,0,5,0</Thickness>

