		<x:Double x:Key="MaxWidth.TagDeveloper">60</x:Double>
		<x:Double x:Key="MaxWidth.TagGenre">50</x:Double>

		<!-- LineHeight -->
		<x:Double x:Key="LineHeight.Description">15</x:Double>

		<!-- PlatformListView 전용 -->
		<x:Double x:Key="FontSize.PlatformListTitle">20</x:Double>
		<x:Double x:Key="FontSize.PlatformListCount">10</x:Double>
		<x:Double x:Key="FontSize.PlatformCardName">14</x:Double>
		<x:Double x:Key="FontSize.PlatformTime">18</x:Double>
		<x:Double x:Key="FontSize.PlatformDate">10</x:Double>

		<x:Double x:Key="IconSize.MenuIcon">32</x:Double>

		<Thickness x:Key="Margin.PlatformListContainer">20,30,20,20</Thickness>
		<Thickness x:Key="Margin.PlatformListHeader">0,0,0,10</Thickness>
		<Thickness x:Key="Margin.PlatformCarousel">0,20,0,20</Thickness>
		<Thickness x:Key="Margin.PlatformIndicator">0,20,0,15</Thickness>
		<Thickness x:Key="Margin.PlatformDateTop">0,3,0,0</Thickness>

		<Thickness x:Key="Padding.PlatformCardImage">20</Thickness>
		<Thickness x:Key="Padding.PlatformCardName">12,10</Thickness>

		<x:Double x:Key="Size.PlatformCardNormalWidth">110</x:Double>
		<x:Double x:Key="Size.PlatformCardNormalHeight">136</x:Double>
		<x:Double x:Key="Size.PlatformCardSelectedWidth">220</x:Double>		
		<x:Double x:Key="Size.PlatformCardSelectedHeight">260</x:Double>
		<x:Double x:Key="Size.PlatformCardSpacing">30</x:Double>

		<CornerRadius x:Key="CornerRadius.PlatformCard">12</CornerRadius>
		<x:Double x:Key="Size.PlatformShadowBlur">30</x:Double>

		<x:Double x:Key="Size.IndicatorNormal">8</x:Double>
		<x:Double x:Key="Size.IndicatorSelected">24</x:Double>
		<x:Double x:Key="Size.IndicatorSpacing">8</x:Double>

		<x:Double x:Key="Size.SelectionBorderThickness">3</x:Double>
		
	</Application.Resources>	
	<Application.Styles>
		<FluentTheme />
		<StyleInclude Source="avares://UltimateEnd/Styles/Common.axaml"/>		
	</Application.Styles>
</Application>